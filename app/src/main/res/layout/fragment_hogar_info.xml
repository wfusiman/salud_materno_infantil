<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E0F2F1"
android:orientation="vertical"
tools:context=".HogarInfoFragment">

<TextView
    android:id="@+id/textViewTituloHogar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:text="Informacion Hogar"
    android:textAlignment="center"
    android:textColor="#9C27B0"
    android:textSize="28sp"
    android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPersonas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            android:text="Personas en el hogar:" />

        <Spinner
            android:id="@+id/spinner_personas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewHabitaciones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            android:text="Cantidad de habitaciones:" />

        <Spinner
            android:id="@+id/spinner_habitaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCalefaccion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            android:text="Tipo de calefaccion:" />

        <Spinner
            android:id="@+id/spinner_calefaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <Button
    android:id="@+id/btn_guardar_hogar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:text="Guardar" />

</LinearLayout>